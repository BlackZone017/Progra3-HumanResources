@model RecursosH.Models.Permiso

@{
    ViewBag.Title = "Details";
}

<h2></h2>
<div class="container-mio-2">
    <div class="box-mio-2">
        <div>
            <h1>Detalles Permiso de @Model.Empleado.nombre @Model.Empleado.apellido</h1>
            <hr />
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayName("Codigo de Empleado")
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Empleado.codigoEmpleado)
                </dd>

                <dt>
                    @Html.DisplayName("¿Desde Cuando?")
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.desde)
                </dd>

                <dt>
                    @Html.DisplayName("¿Hasta Cuando?")
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.hasta)
                </dd>

                <dt>
                    @Html.DisplayName("Comentarios")
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.comentarios)
                </dd>

            </dl>
        </div>
        <p>
            @Html.ActionLink("Editar", "Edit", new { id = Model.id }) |
            @Html.ActionLink("Volver a Lista", "Index", "Permisos", null, new { @class = "boton-atras" })
        </p>
    </div>
</div>