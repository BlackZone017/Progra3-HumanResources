@model RecursosH.Models.Vacacione

@{
    ViewBag.Title = "Delete";
}

<h2></h2>
<div class="container-mio-2">
    <div class="box-mio-2">
        <h1>Eliminar Vacaciones</h1>
        <h3>Desea Eliminar el registro de @Model.Empleado.nombre @Model.Empleado.apellido</h3>
        <div>

            <hr />
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayName("Codigo de Empleado")
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Empleado.codigoEmpleado)
                </dd>

                <dt>
                    @Html.DisplayName("¿Desde Cuando?")
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.desde)
                </dd>

                <dt>
                    @Html.DisplayName("¿Hasta Cuando?")
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.hasta)
                </dd>

                <dt>
                    @Html.DisplayName("Correspondiente")
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.correspondiente)
                </dd>

                <dt>
                    @Html.DisplayName("Correspondiente")
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.comentarios)
                </dd>

            </dl>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <input type="submit" value="Eliminar" class="btn btn-danger boton-eliminar" /> |
                @Html.ActionLink("Volver a Lista", "Index", "Vacaciones", null, new { @class = "boton-atras" })
            </div>
            }
        </div>
    </div>
</div>