@model RecursosH.Models.Empleado

<h1>Activar Empleado</h1>

<div class="container-mio-2">
    <div class="box-mio-2">
        <h2>Seguro que quieres Activar a @Model.nombre @Model.apellido</h2>
        <div>
            <hr />
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayName("Codigo de Empleado")
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.codigoEmpleado)
                </dd>

                <dt>
                    @Html.DisplayName("Nombre ")
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.nombre)
                </dd>

                <dt>
                    @Html.DisplayName("Apellido ")
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.apellido)
                </dd>

                <dt>
                    @Html.DisplayName("Telefono ")
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.telefono)
                </dd>

                <dt>
                    @Html.DisplayName("Fecha de Ingreso")
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.fechaIngreso)
                </dd>

                <dt>
                    @Html.DisplayName("Salario ")
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.salario)
                </dd>

                <dt>
                    @Html.DisplayName("Estatus ")
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.estatus)
                </dd>

                <dt>
                    @Html.DisplayName("ID del Manager")
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.idManager)
                </dd>

                <dt>
                    @Html.DisplayName("Codigo del Cargo")
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Cargo.codigoCargo)
                </dd>

                <dt>
                    @Html.DisplayName("Codigo del Departamento")
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Departamento.codigoDepartamento)
                </dd>

            </dl>


            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-actions no-color">
                    <input type="submit" value="Mover a Activos" class="btn btn-success boton-eliminar" /> |
                    @Html.ActionLink("Volver a Lista", "Index", "Empleado", null, new { @class = "boton-atras" })
                </div>
            }
        </div>
    </div>
</div>
