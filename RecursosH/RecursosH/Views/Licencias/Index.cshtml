@model IEnumerable<RecursosH.Models.Licencia>

@{
    ViewBag.Title = "Index";
}
<div class="container-mio-2">
    <div class="box-mio-2">
        <h1>Licencias</h1>


        <table class="table">
            <tr>
                <th>
                    @Html.DisplayName("Codigo de Empleado")
                </th>
                <th>
                    @Html.DisplayName("¿Desde Cuando?")
                </th>
                <th>
                    @Html.DisplayName("¿Hasta Cuando?")
                </th>
                <th>
                    @Html.DisplayName("Motivos")
                </th>
                <th>
                    @Html.DisplayName("Comentarios")
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Empleado.codigoEmpleado)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.desde)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.hasta)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.motivos)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.comentarios)
                    </td>
                    <td>
                        @Html.ActionLink("Editar", "Edit", new { id = item.id }) |
                        @Html.ActionLink("Detalles", "Details", new { id = item.id }) |
                        @Html.ActionLink("Borrar", "Delete", new { id = item.id })
                    </td>
                </tr>
            }

        </table>
        <p>
            @Html.ActionLink("Agregar", "Create", "Licencias", null, new { @class = "boton-agregar" })
        </p>
    </div>
</div>
