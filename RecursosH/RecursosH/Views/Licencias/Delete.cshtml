@model RecursosH.Models.Licencia

@{
    ViewBag.Title = "Delete";
}

<h2></h2>
<div class="container-mio-2">
    <div class="box-mio-2">
        <h1>Eliminar Licencia</h1>
        <h3>Desea eliminar el regitro de licencia de de @Model.Empleado.nombre @Model.Empleado.apellido?</h3>
        <div>

            <hr />
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayName("Codigo de Empleado")
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Empleado.codigoEmpleado)
                </dd>

                <dt>
                    @Html.DisplayName("¿Desde Cuando?")
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.desde)
                </dd>

                <dt>
                    @Html.DisplayName("¿Hasta Cuando?")
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.hasta)
                </dd>

                <dt>
                    @Html.DisplayName("Motivos")
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.motivos)
                </dd>

                <dt>
                    @Html.DisplayName("Comentarios")
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.comentarios)
                </dd>

            </dl>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-actions no-color">
                    <input type="submit" value="Eliminar" class="btn btn-danger boton-eliminar" /> |
                    @Html.ActionLink("Volver a Lista", "Index", "Licencias", null, new { @class = "boton-atras" })
                </div>
            }
        </div>
        </div>
    </div>
