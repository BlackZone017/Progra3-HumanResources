@model RecursosH.Models.Departamento

@{
    ViewBag.Title = "Details";
}

<h2></h2>
<div class="container-mio-2">
    <div class="box-mio-2">
        <div>
            <h1>Detalles Departamento @Model.nombre</h1>
            <hr />
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayName("Codigo del Departamento")
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.codigoDepartamento)
                </dd>

                <dt>
                    @Html.DisplayName("Nombre")
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.nombre)
                </dd>

                <dt>
                    @Html.DisplayName("Id del Manager")
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.idManager)
                </dd>

            </dl>
        </div>
        <p>
            @Html.ActionLink("Editar", "Edit", new { id = Model.id }) |
            @Html.ActionLink("Volver a Lista", "Index", "Departamento", null, new { @class = "boton-atras" })
        </p>
    </div>
</div>
