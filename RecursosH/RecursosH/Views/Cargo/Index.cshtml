@model IEnumerable<RecursosH.Models.Cargo>

@{
    ViewBag.Title = "Index";
}


<div class="container-mio-2">
    <div class="box-mio-2">
        <h1>Mantenimiento Cargos</h1>

        <table class="table">
                <tr>
                    <th>
                        @Html.DisplayName("Codigo de Cargo")
                    </th>
                    <th>
                        @Html.DisplayName("Cargo")
                    </th>

                </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.codigoCargo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.cargo)
                    </td>
                    <td>
                        @Html.ActionLink("Editar", "Edit", new { id = item.id }) |
                        @Html.ActionLink("Detalles", "Details", new { id = item.id }) |
                        @Html.ActionLink("Borrar", "Delete", new { id = item.id })
                    </td>
                </tr>
            }

        </table>
        <p>
            @Html.ActionLink("Agregar", "Create", "Cargo", null, new { @class = "boton-agregar" })
        </p>
    </div>
</div>