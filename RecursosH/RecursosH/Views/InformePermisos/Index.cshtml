@model IEnumerable<RecursosH.Models.Permiso>
@{
    ViewBag.Title = "Index";
}
<div class="container-mio-2">
    <div class="box-mio-2">
        <h1>Informe Permisos</h1><br />

        @using (Html.BeginForm("Index", "InformePermisos", FormMethod.Get))
        {
            <div class="form-horizontal">
                <div class="form-group">
                    <div class="col-md-10">
                        <h3 class="titulo-buscar">Buscar Empleados</h3>
                        @Html.DropDownList("codigoEmpleado", null, htmlAttributes: new { @class = "form-control" })
                        <input type="submit" value="Buscar" class="btn btn-success btn-buscar" /><span></span>

                    </div>
                </div>
            </div>
        }

        <table class="table">
            <tr>
                <th>
                    @Html.DisplayName("Codigo del Empleado")
                </th>
                <th>
                    @Html.DisplayName("¿Desde Cuando?")
                </th>
                <th>
                    @Html.DisplayName("¿Hasta Cuando?")
                </th>
                <th>
                    @Html.DisplayName("Comentarios")
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Empleado.codigoEmpleado)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.desde)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.hasta)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.comentarios)
                    </td>
                </tr>
            }

        </table>
        <button><a href="./InformePermisos" class="btn btn-block">Buscar Todos</a></button>
    </div>
    </div>
