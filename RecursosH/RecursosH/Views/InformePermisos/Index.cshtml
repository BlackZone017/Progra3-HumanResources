@model IEnumerable<RecursosH.Models.Permiso>
@{
    ViewBag.Title = "Index";
}

<h2>Informe Permisos</h2><br />

@using (Html.BeginForm("Index", "InformePermisos", FormMethod.Get))
{
    <div class="form-horizontal">
        <div class="form-group">
            <div class="col-md-10">
                @Html.Label("Buscar por Empleado") <span></span>

                @Html.DropDownList("codigoEmpleado", null, htmlAttributes: new { @class = "form-control" })
                <input type="submit" value="Buscar" class="btn btn-success" /><span></span>
                <button><a href="./InformePermisos" class="btn btn-block">Buscar Todos</a></button>
            </div>
        </div>
    </div>
}

    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Empleado.codigoEmpleado)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.desde)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.hasta)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.comentarios)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Empleado.codigoEmpleado)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.desde)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.hasta)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.comentarios)
                </td>
            </tr>
        }

    </table>
